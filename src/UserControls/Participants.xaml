<UserControl x:Class="HcsBudget.UserControls.Participants"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HcsBudget"
        xmlns:uc="clr-namespace:HcsBudget.UserControls">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5,5,5,5">
            <Label Content="Participants" />
            <Grid>
                <TreeView Name="tvParticipants" Height="75" Width="295" />
            </Grid>
            <TextBox Width="295" Height="25" Margin="0,5,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Add" Width="95" Height="25" />
                <Button Content="Edit" Width="95" Height="25" Margin="5,0,0,0" />
                <Button Content="Delete" Width="95" Height="25" Margin="5,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
