<Window x:Class="HcsBudget.Views.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HcsBudget"
        xmlns:uc="clr-namespace:HcsBudget.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="HcsBudget (for Windows): Service" 
        MaxHeight="375" MaxWidth="400" MinHeight="375" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="265" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Label Name="lblServiceDetails" Content="SERVICE DETAILS" 
                HorizontalAlignment="Center" Grid.Row="0" />
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" 
                Grid.Row="1">
            <uc:ServiceInput />
            <uc:Participants />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                Margin="5,5,5,5" Grid.Row="2">
            <Button Content="Save" Width="95" Height="25" />
            <Button Content="Cancel" Width="95" Height="25" Margin="5,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
